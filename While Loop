//Learning While Loop

#include <iostream>

int main() {
  
  int i = 0;
  int square = 0;
  
  // Write a while loop here:
  while (i <= 9) {
    square = i * i;
    std::cout << i << " " << square << "\n";
    i++;

  }
  
}

//99bottles on the wall

#include <iostream>

int main() {

  // Write a for loop here:
  
  for (int i = 99; i > 0; i--) {
  
    std::cout << i; << " bottles of pop on the wall.\n";
    std::cout << "Take one down and pass it around.\n";
    std::cout << i - 1 << " bottles of pop on the wall.\n";
  
  }
  
}
