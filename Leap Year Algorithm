#include <iostream>

int main() {
  
  int year = 0;

  std::cout << "Please type the year :\n";
  std::cin >> year;

if (1000<= year <= 9999 && 
    year % 4 == 0 && 
    year % 100 != 100 || 
    year % 400 == 0) {

      std::cout << year << " falls on a leap year.\n";

    } else {
      
      std::cout << year << " not falls on a leap year.\n";
    }
  
}
